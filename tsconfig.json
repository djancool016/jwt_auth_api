{
    "compilerOptions": {
      "target": "ES2017",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictNullChecks": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}